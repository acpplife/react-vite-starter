{
	"name": "react-vite-starter",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"description": "A Vite + React project",
	"author": {
		"name": "wangzhichang",
		"email": "dswangzhichang@gmail.com"
	},
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"lint:stage": "lint-staged",
		"lint:fix": "eslint . --fix",
		"lint:style": "stylelint **/*.{scss,css}",
		"format": "prettier --write src/",
		"preview": "vite preview",
		"check": "tsno run ./scripts/check.ts",
		"prepare": "husky",
		"commit": "git add . & git-cz",
		"spellcheck": "cspell \"**/*.{tsx,ts,jsx,js,json,md}\""
	},
	"lint-staged": {
		"*": "prettier --write",
		"*.{ts,tsx}": "pnpm lint:fix",
		"*.{scss,css}": "pnpm lint:style"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"dependencies": {
		"@reduxjs/toolkit": "^2.2.7",
		"localforage": "^1.10.0",
		"match-sorter": "^6.3.4",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-redux": "^9.1.2",
		"react-router-dom": "^6.26.0",
		"sort-by": "^1.2.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.5.0",
		"@commitlint/config-conventional": "^18.5.0",
		"@commitlint/cz-commitlint": "^19.4.0",
		"@types/node": "18",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"commitizen": "^4.3.0",
		"cspell": "^8.13.2",
		"cz-git": "^1.9.4",
		"eslint": "^8.56.0",
		"eslint-plugin-react": "^7.35.0",
		"eslint-plugin-react-hooks": "^5.1.0-rc.0",
		"eslint-plugin-react-refresh": "^0.4.9",
		"globals": "^15.9.0",
		"husky": "^9.1.4",
		"inquirer": "^9.3.6",
		"lint-staged": "^15.2.8",
		"prettier": "^3.3.3",
		"stylelint": "^15.10.2",
		"stylelint-config-standard": "^34.0.0",
		"tsno": "^2.0.0",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.4.0",
		"zx": "^8.1.4"
	}
}
